    <div class="container">
        <h2 class="text-center section-title">Facilities/Services</h2>
        <div class="row">
            <% facilities.forEach((facilities, index) => { %>  <!-- Fix variable name -->
            <div class="col-md-6 col-lg-3">
                <div class="facility-box text-center">
                    <img src="/admin_assets/<%-facilities.image %>" alt="Stoma Clinic" class="img-fluid">
                    <h4><%-facilities.name %></h4>
                    <p><%-facilities.info %></p>
                    <!-- <a href="#" class="btn btn-primary">Read More</a> -->
                </div>
            </div>
            <% }); %>

             
            
            </div>
             
        </div>
    </div>
</section>


