/* About Us Section */
.aboutus-section {
    position: relative;
    width: 100%;
    height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #fff;
    padding: 20px;
   
    background-size: cover, cover;
    background-position: center, center;
    background-repeat: no-repeat, no-repeat;
    background-blend-mode: overlay;
}

/* Dark Overlay */
.aboutus-overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
}

/* Content */
.aboutus-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    padding: 20px;
    animation: fadeInUp 1.2s ease-in-out;
}

/* Animated Heading */
.animated-text span {
    display: inline-block;
    opacity: 0;
    transform: translateY(20px);
    animation: textFadeIn 0.8s forwards;
}

.animated-text span:nth-child(n) { animation-delay: calc(0.1s * var(--i)); }

/* Paragraph Animation */
.aboutus-content p {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeSlideIn 1s ease-in-out forwards 0.5s;
}

/* Button */
.aboutus-btn {
    margin-top: 20px;
    padding: 12px 24px;
    background:  #002f6c;
    color: #fff;
    font-size: 16px;
    font-weight: bold;
    text-decoration: none;
    border-radius: 5px;
    transition: background 0.3s, transform 0.3s;
    display: inline-block;
    opacity: 0;
    animation: fadeSlideIn 1s ease-in-out forwards 0.8s;
}

.aboutus-btn:hover {
    background: #0056b3;
    transform: scale(1.05);
}

/* Keyframes */
@keyframes textFadeIn {
    0% { opacity: 0; transform: translateY(20px); }
    100% { opacity: 1; transform: translateY(0); }
}

@keyframes fadeSlideIn {
    0% { opacity: 0; transform: translateY(30px); }
    100% { opacity: 1; transform: translateY(0); }
}

/* Responsive */
@media (max-width: 992px) {
    .aboutus-section {
        height: auto;
        padding: 80px 20px;
    }

    .aboutus-content {
        max-width: 100%;
        text-align: center;
    }
}

@media (max-width: 576px) {
    .aboutus-content h2 {
        font-size: 28px;
    }

    .aboutus-content p {
        font-size: 16px;
    }
}


