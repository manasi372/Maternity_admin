    content: "";
    position: absolute;
    top: -3px;
    left: -3px;
    right: -3px;
    bottom: -3px;
    border-radius: 15px;
    z-index: -1;
    background: linear-gradient(135deg, #0c2856, #7cb0e7, #0c2856); /* Light Blue Gradient */
    opacity: 0;
    transition: opacity 0.4s ease-in-out;
}

/* Show Border on Hover */
.team-card:hover::before {
    opacity: 1;
}

/* Hover Effect - Slight Lift */
.team-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
}


/* Reveal Animation */
.team-card.show {
    opacity: 1;
    transform: translateY(0);
    transition: all 0.8s ease-in-out;
}

/* Hover Effect */
.team-card:hover {
    transform: translateY(-10px) scale(1.05);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
}

