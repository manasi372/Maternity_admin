    text-align: left;
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease-in-out, transform 0.8s ease-in-out;
}


/* Apply animation when in viewport */
.review-card.show {
    opacity: 1;
    transform: translateY(0);
}

/* Hover Effect */
 .review-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
}
/* Review Text */
.review-text {
    font-size: 1rem;
    color: #333;
}

/* Review Author */
.review-author {
    font-weight: bold;
    margin-top: 5px;
    color: #002f6c;
}

/* Profile Image */
.profile-img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
}

/* Quote Icon */
.quote-icon {
    font-size: 1.5rem;
    color: #002f6c;
    position: absolute;
    top: -10px;
    right: -10px;
    background: white;
    padding: 10px;
    border-radius: 50%;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

/* On Click - Border Animation */
.review-card.active {
    border: 2px solid #007bff;
    border-radius: 30px;
    animation: borderGlow 1s infinite alternate;
}

/* Border Animation */
@keyframes borderGlow {
    from {
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
    }
    to {
        box-shadow: 0 0 20px rgba(0, 123, 255, 0.8);
    }
