.about-list li:nth-child(3) { animation-delay: 1.6s; }
.about-list li:nth-child(4) { animation-delay: 1.8s; }
.about-list li:nth-child(5) { animation-delay: 2s; }
.about-list li:nth-child(6) { animation-delay: 2.2s; }
