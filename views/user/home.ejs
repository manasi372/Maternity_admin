<script>
    const doctorSlider = document.querySelector(".doctor-slider");
    const nextBtn = document.getElementById("nextBtn");
    const prevBtn = document.getElementById("prevBtn");
    
    let scrollAmount = 0;
    const cardWidth = document.querySelector(".doctor-card").offsetWidth + 20;
    const totalWidth = doctorSlider.scrollWidth;
    const visibleWidth = doctorSlider.parentElement.clientWidth;
    
    nextBtn.addEventListener("click", () => {
        if (scrollAmount + visibleWidth < totalWidth) {
            scrollAmount += cardWidth * 2;
            doctorSlider.scrollTo({ left: scrollAmount, behavior: "smooth" });
        } else {
            scrollAmount = 0;
            doctorSlider.scrollTo({ left: 0, behavior: "smooth" });
        }
    });
    
    prevBtn.addEventListener("click", () => {
        if (scrollAmount > 0) {
            scrollAmount -= cardWidth * 2;
            doctorSlider.scrollTo({ left: scrollAmount, behavior: "smooth" });
        } else {
            scrollAmount = totalWidth - visibleWidth;
            doctorSlider.scrollTo({ left: scrollAmount, behavior: "smooth" });
        }
    });
    </script>
    

