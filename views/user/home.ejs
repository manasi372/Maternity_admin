<script>
    let index = 0;
    const videosPerPage = 3;
    const videoWrapper = document.querySelector(".video-wrapper");
    const videoBoxes = document.querySelectorAll(".video-box");
    const totalVideos = videoBoxes.length;
    const videoWidth = 400 + 20;
    
    // Function to move videos in a loop
    function updateSlider() {
        let offset = index * -(videoWidth * videosPerPage);
        videoWrapper.style.transform = `translateX(${offset}px)`;
    }
    
    // Next Button: If last set, start from first again
    function nextVideos() {
        if (index < Math.ceil(totalVideos / videosPerPage) - 1) {
            index++;
        } else {
            index = 0; // Loop back to the first set
        }
        updateSlider();
    }
    
    // Previous Button: If first set, jump to last set
    function prevVideos() {
        if (index > 0) {
            index--;
        } else {
            index = Math.ceil(totalVideos / videosPerPage) - 1; // Loop to last set
        }
        updateSlider();
    }
    </script>
    
    
