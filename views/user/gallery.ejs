.hospital-gallery1 {
    padding: 50px 0;
    background: #f8f9fa;
    text-align: center;
    margin-top: 50px;
}

/* üñºÔ∏è Image Container */
.gallery-container1 {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 15px;
    padding: 20px;
}

/* üì¶ Image Boxes */
.box1, .box2, .box3 {
    flex: 1 1 300px;
    max-width: 500px;
    position: relative;
    overflow: hidden;
    border-radius: 10px;
    transition: 0.3s ease-in-out;
}

/* üñºÔ∏è Image Styling */
.box1 img, .box2 img, .box3 img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    transition: 0.3s ease-in-out;
}

/* üåü Hover Effect */
.box1:hover img, .box2:hover img, .box3:hover img {
    filter: brightness(70%) contrast(1.2);
    transform: scale(1.05);
}

/* üìå Active (Click) Effect */
.box1:active img, .box2:active img, .box3:active img {
    filter: brightness(50%) contrast(1.5);
}

