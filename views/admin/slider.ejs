<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Slider Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f4f4f4; }
        .container { max-width: 85%; }

        /* Form & Table Box */
        .form-box, .table-box {
            background: white; padding: 20px; border-radius: 8px;
            box-shadow: 2px 4px 15px rgba(0, 0, 0, 0.15);
        }

        /* Table */
        .table td, .table th { vertical-align: middle; text-align: center; }
        .table-box table { word-wrap: break-word; font-size: 14px; }

        /* Image Styling */
        .img-thumbnail { width: 80px; height: 80px; border-radius: 8px; }

        /* Title Styling */
        .title-text {
            white-space: normal;
            overflow: hidden;
            word-wrap: break-word;
            display: block;
            font-size: 14px;
        }

        /* Action Buttons */
        .action-btns {
            display: flex;
            flex-direction: row;
            justify-content: center;
            gap: 8px;
        }
        .action-btns .btn {
            padding: 6px 12px;
            font-size: 14px;
            width: 80px;
            height: 32px;
            text-align: center;
        }

        /* Align inputs properly */
        .input-group {
            display: flex;
            gap: 10px;
            align-items: center;
            width: 100%;
        }
        .input-group .form-control {
            flex: 1;
        }

        /* Responsive Table */
        @media (max-width: 768px) {
            .table-box {
                overflow-x: auto;
            }
            .table th, .table td {
                font-size: 12px;
                padding: 5px;
            }
            .img-thumbnail {
                width: 60px;
                height: 60px;
            }
            .title-text {
                font-size: 12px;
            }
            .action-btns .btn {
                width: 75px;
                height: 30px;
                font-size: 12px;
            }
            .input-group {
                flex-direction: column;
                gap: 5px;
            }
        }
    </style>
</head>
<body>

<div class="container mt-4">
    <!-- Add Slider Form -->
    <div class="form-box">
        <h5 class="text-primary text-center">Add Slider</h5>
        <form action="/admin/save_slider" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12">
                    <div class="input-group">
                        <div>
                            <label class="form-label">Add Slider Title 1</label>
                            <input type="text" name="text1" class="form-control" required>
                        </div>
                        <div>
                            <label class="form-label">Add Slider Title 2</label>
                            <input type="text" name="text2" class="form-control" required>
                        </div>
                        <div>
                            <label class="form-label">Add Slider Image</label>
                            <input type="file" name="img1" class="form-control" required>
                        </div>
                    </div>
                </div>

                <div class="col-12 mt-3">
                    <button type="submit" class="btn btn-primary w-100">Save Slider</button>
                </div>
            </div>
        </form>
    </div>

    <!-- Slider List -->
    <div class="table-box mt-4">
        <h6 class="text-primary text-center">Slider List</h6>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="table-success">
                    <tr>
                        <th>SR NO</th>
                        <th>Title 1</th>
                        <th>Title 2</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (slider.length > 0) { %>
                        <% slider.map((row, i) => { %>
                            <tr>
                                <td><%- i + 1 %></td>
                                <td><span class="title-text"><%- row.text1 %></span></td>
                                <td><span class="title-text"><%- row.text2 %></span></td>
                                <td>
                                    <img src="/admin_assets/<%- row.img1 %>" class="img-thumbnail">
                                </td>
                                <td class="action-btns">
                                    <a href="/admin/edit_slider/<%- row.slider_id %>">
                                        <button class="btn btn-warning btn-sm">‚úè Edit</button>
                                    </a>
                                    <a href="/admin/delete_slider/<%- row.slider_id %>" onclick="return confirm('Are you sure?')">
                                        <button class="btn btn-danger btn-sm">üóë Delete</button>
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center">No sliders found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

