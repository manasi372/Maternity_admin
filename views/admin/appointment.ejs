<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointment Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f8f9fa; }
        .form-container, .table-container {
            max-width: 900px;
            margin: 20px auto;
            padding: 20px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }
        .table td { vertical-align: middle; text-align: center; }
        .action-btns { display: flex; gap: 5px; justify-content: center; align-items: center; }
    </style>
</head>
<body>

<div class="container">
    <!-- Appointment Form -->
    <div class="form-container">
        <h2 class="text-center mb-4 text-primary">Add Appointment</h2>
        <form action="/save_appointment" method="POST">
            
            <div class="mb-3">
                <label class="form-label">Heading</label>
                <input type="text" name="heading" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Info</label>
                <textarea name="info" class="form-control"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Subheading</label>
                <input type="text" name="subheading" class="form-control">
            </div>

            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" name="name" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Phone</label>
                <input type="text" name="phone" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="email" class="form-control">
            </div>

            <div class="mb-3">
                <label class="form-label">Date of Birth</label>
                <input type="date" name="dob" class="form-control">
            </div>

            <div class="mb-3">
                <label class="form-label">Department</label>
                <input type="text" name="department" class="form-control">
            </div>

            <div class="mb-3">
                <label class="form-label">Doctor</label>
                <input type="text" name="doctor" class="form-control">
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary">Add Appointment</button>
            </div>

        </form>
    </div>

    <!-- Appointment List -->
    <div class="table-container">
        <h4 class="text-primary text-center">Appointments List</h4>
        <table class="table table-bordered">
            <thead class="table-success">
                <tr>
                    <th>#</th>
                    <th>Heading</th>
                    <th>Info</th>
                    <th>Subheading</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>DOB</th>
                    <th>Department</th>
                    <th>Doctor</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                 <% appointments.map((row, i) => { %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= row.heading %></td>
                        <td><%= row.info %></td>
                        <td><%= row.subheading %></td>
                        <td><%= row.name %></td>
                        <td><%= row.phone %></td>
                        <td><%= row.email %></td>
                        <td><%= row.dob %></td>
                        <td><%= row.department %></td>
                        <td><%= row.doctor %></td>
                        <td class="action-btns">
                            <a href="/edit_appointment/<%= row.id %>" class="btn btn-warning btn-sm">‚úè Edit</a>
                            <a href="/delete_appointment/<%= row.id %>" onclick="return confirm('Are you sure?');" class="btn btn-danger btn-sm">üóë Delete</a>
                        </td>
                    </tr>
                 <% }) %>
            </tbody>
        </table>
    </div>

    <div class="text-center mt-3">
        <a href="/appointment/print" target="_blank" class="btn btn-secondary">Print Appointments</a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

