<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Slider Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        /* ===== BLOG SLIDER STYLES ===== */

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        /* Main Blog Container */
        .blog-container {
            max-width: 900px;
            margin: auto;
            padding: 20px;
        }

        h2 {
            font-size: 26px;
            font-weight: bold;
            color: #007bff;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Upload Form */
        .blog-form {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .blog-form .form-label {
            font-weight: bold;
        }

        .blog-form .form-control {
            border-radius: 5px;
        }

        .blog-form .btn-primary {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            font-weight: bold;
            border-radius: 5px;
        }

        /* Table Styling */
        .blog-table {
            background: white;
            border-radius: 8px;
            overflow: hidden;
        }

        .blog-table thead {
            background-color: #28a745;
            color: white;
        }

        .blog-table th, .blog-table td {
            text-align: center;
            vertical-align: middle;
            padding: 12px;
        }

        /* Blog Images */
        .blog-img {
            width: 80px;
            height: auto;
            border-radius: 5px;
            transition: transform 0.3s ease-in-out;
        }

        .blog-img:hover {
            transform: scale(1.1);
        }

        /* Buttons */
        .btn-warning, .btn-danger {
            padding: 8px 12px;
            font-size: 14px;
            border-radius: 5px;
         }

        .btn-warning i, .btn-danger i {
            margin-right: 5px;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .blog-container {
                padding: 15px;
            }
            h2 {
                font-size: 22px;
            }
            .btn {
                font-size: 14px;
                padding: 8px;
            }
        }
    </style>
</head>
<body>

    <div class="container mt-4 blog-container">
        <h2 class="text-center text-primary">Add Blog Slider</h2>

        <!-- Form to Upload Blog Image -->
        <form action="/admin/save_blogslider" method="POST" enctype="multipart/form-data" class="blog-form">
            <div class="mb-3">
                <label class="form-label">Blog Image</label>
                <input type="file" name="image" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>

        <hr>

        <!-- Blog Slider List -->
        <h3 class="text-center text-primary mt-4">Blog Slider List</h3>
        <div class="table-responsive">
            <table class="table table-bordered table-hover blog-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% blogslider.forEach((row, i) => { %>
                        <tr>
                            <td><%= i + 1 %></td>
                            <td>
                                <img src="/admin_assets/<%= row.image %>" alt="Blog Image" class="blog-img">
                            </td>
                            <td class="action-btns">
                                <a href="/admin/edit_blogslider/<%= row.blogslider_id %>" class="btn btn-warning btn-sm">
                                    ‚úè Edit
                                </a>
                                <a href="/admin/delete_blogslider/<%= row.blogslider_id %>" onclick="return confirm('Are you sure?');" class="btn btn-danger btn-sm">
                                    üóë Delete
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>

