<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Blog Slider</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f8f9fa; }
        .form-container, .table-container {
            max-width: 850px;
            margin: 20px auto;
            padding: 20px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        /* Table Responsive Design */
        table {
            width: 100%;
            table-layout: fixed;
        }

        th, td {
            text-align: center;
            vertical-align: middle;
            padding: 8px;
        }

        th {
            font-size: 14px;
            white-space: nowrap;
        }

        td {
            font-size: 13px;
        }

        /* Image Styling */
        .image-preview {
            width: 100px;
            height: auto;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        /* Reduce Button Size */
        .btn-sm {
            padding: 3px 6px;
            font-size: 12px;
        }
    </style>
</head>
<body>

<div class="container">
    <div class="form-container">
        <h2 class="text-center mb-4 text-primary">Add Blog Slider Image</h2>
        <form action="/admin/save_blogslider" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Upload Image</label>
                <input type="file" name="image" class="form-control" required>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Upload</button>
            </div>
        </form>
    </div>

    <div class="table-container">
        <h4 class="text-primary text-center">Blog Slider Images</h4>
        <table class="table table-bordered">
            <thead class="table-success">
                <tr>
                    <th style="width: 5%;">#</th>
                    <th style="width: 40%;">Image</th>
                    <th style="width: 15%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% blogslider.map((row, i) => { %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><img src="/uploads/<%= row.image %>" alt="Blog Image" class="image-preview"></td>
                        <td>
                            <a href="/admin/edit_blogslider/<%= row.id %>" 
                               class="btn btn-warning btn-sm">
                               ‚úè Edit
                            </a>
                            <a href="/admin/delete_blogslider/<%= row.id %>" 
                               onclick="return confirm('Are you sure?');" 
                               class="btn btn-danger btn-sm">
                               üóë Delete
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

