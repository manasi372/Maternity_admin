<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Slider Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f4f4f4; }
        .container { max-width: 85%; }
        .form-box, .table-box {
            background: white; padding: 20px; border-radius: 8px;
            box-shadow: 2px 4px 15px rgba(0, 0, 0, 0.15);
        }
        .table td, .table th { vertical-align: middle; text-align: center; }
        .img-thumbnail { width: 80px; height: 80px; border-radius: 8px; }
        .title-text { max-width: 150px; white-space: normal; word-wrap: break-word; font-size: 14px; }
        .action-btns { display: flex; justify-content: center; gap: 8px; }
        .action-btns .btn { padding: 6px 12px; font-size: 14px; width: 80px; height: 32px; }

        @media (max-width: 768px) {
            .table-box { overflow-x: auto; }
            .table th, .table td { font-size: 12px; padding: 5px; }
            .img-thumbnail { width: 60px; height: 60px; }
            .title-text { max-width: 120px; font-size: 12px; }
            .action-btns .btn { width: 75px; height: 30px; font-size: 12px; }
        }
    </style>
</head>
<body>

<div class="container mt-4">
    <!-- Add Slider Form -->
    <div class="form-box">
        <h5 class="text-primary text-center">Add Slider</h5>
        <form action="/admin/save_aboutslider" method="POST" enctype="multipart/form-data">
            <div class="row g-3">
                <div class="col-md-6">
                    <input type="text" name="title" class="form-control mb-3" placeholder="Enter Title" required>
                    <textarea name="info" class="form-control mb-3" placeholder="Enter Info" required></textarea>
                </div>
                <div class="col-md-6">
                    <input type="file" name="img" class="form-control mb-3" required>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary w-100">Save Slider</button>
                </div>
            </div>
        </form>
    </div>

    <!-- Slider List -->
    <div class="table-box mt-4">
        <h6 class="text-primary text-center">Slider List</h6>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="table-success">
                    <tr>
                        <th>SR NO</th>
                        <th>Title</th>
                        <th>Info</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (aboutslider.length > 0) { %>
                        <% aboutslider.forEach((row, i) => { %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td class="title-text"><%= row.title %></td>
                                <td class="title-text"><%= row.info %></td>
                                <td><img src="/admin_assets/<%= row.img %>" class="img-thumbnail"></td>
                                <td class="action-btns">
                                    <a href="/admin/edit_aboutslider/<%= row.id %>">
                                        <button class="btn btn-warning btn-sm">‚úè Edit</button>
                                    </a>
                                    <a href="/admin/delete_aboutslider/<%= row.id %>">
                                        <button class="btn btn-danger btn-sm">üóë Delete</button>
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center">No sliders found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

