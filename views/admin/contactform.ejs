<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Form Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f4f4f4; }
        .container { max-width: 85%; }
        .form-box, .table-box {
            background: white; padding: 20px; border-radius: 8px;
            box-shadow: 2px 4px 15px rgba(0, 0, 0, 0.15);
        }
        .img-thumbnail { width: 80px; height: 80px; border-radius: 8px; object-fit: cover; }
        .table-box { margin-top: 20px; }
    </style>
</head>
<body>
    <!-- Contact List -->
    <div class="table-box">
        <h6 class="text-primary text-center">Contact Submissions</h6>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="table-success">
                    <tr>
                        <th>SR NO</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Subject</th>
                        <th>Message</th>
                    </tr>
                </thead>
                <tbody>
                    <% contactform.map((row, i) => { %>
                        <tr>
                            <td><%= i + 1 %></td>
                            <td>
                                <% if (row.img) { %>
                                    <img src="/admin_assets/<%= row.img %>" class="img-thumbnail" width="100">
                             <% } else { %>
                                    N/A
                                <% } %>
                            </td>
                            <td><%= row.name %></td>
                            <td><%= row.email %></td>
                            <td><%= row.phone %></td>
                            <td><%= row.subject %></td>
                            <td><%= row.message %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

